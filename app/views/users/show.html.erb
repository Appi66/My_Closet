<!--ユーザー詳細-->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <h3>フォロー数: <%= @user.followings.count %></h3>
  <h3>フォロワー数: <%= @user.followers.count %></h3>
  <% if current_user.following?(@user) %>

    <%= link_to "フォロー外す", user_relationships_path(user_id: @user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user_id: @user.id), method: :post %>
  <% end %>

  <% if @user == current_user %>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
    <p><%= link_to "Add Item", new_item_image_path %></p>
  <% end %>
</div>

<!--ユーザーの投稿一覧-->
<% @post_images.each do |post_image| %>
<div>
  <%= image_tag post_image.user.get_profile_image(50,50) %>
  <p>User Name：<%= link_to user_path(@user.id) do %>
                <%= post_image.user.name %>
                <% end %>
  </p>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image(200,200) %>
  <% end %>
  <p>Caption：<%= post_image.caption %></p>
  <p>コメント<%= post_image.post_comments.count %>件</p>
</div>
<% end %>
