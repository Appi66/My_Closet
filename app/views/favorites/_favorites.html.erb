  <% if post_image.favorited_by?(current_user) %>
    <p>
      <%= link_to post_image_favorites_path(post_image), method: :delete, remote: true, class: "link like-after" do %>
      <i class="fas fa-heart"></i><%= post_image.favorites.count %>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_image_favorites_path(post_image), method: :post, remote: true, class: "link like-before" do %>
      <i class="far fa-heart"></i><%= post_image.favorites.count %>
      <% end %>
    </p>
  <% end %>