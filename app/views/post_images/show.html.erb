<div class="flame">
<div class="show-card">
  <table>
    <td>
      <%= link_to user_path(@post_image.user.id), class: "link" do %>
      <%= image_tag @post_image.user.get_profile_image(50,50), class: "profile-image" %>
      <% end %>
    </td>
    <td>
      <%= link_to user_path(@post_image.user.id), class: "link" do %>
      <%= @post_image.user.name %>
      <% end %>
    </td>
  </table>
  <p class="center"><%= image_tag @post_image.get_image(300,250) %></p>
  <p><%= @post_image.caption %></p>
  <%= @post_image.created_at.strftime('%Y/%m/%d') %>



  <!--いいね-->
    <div id="favorite_buttons_<%= @post_image.id %>">
      <%= render "favorites/favorites", post_image: @post_image %>
    </div>



  <!--コメント件数とコメントフォーム-->
  <div id="comment_form">
    <%= render 'post_comments/form', post_image: @post_image, post_comment: @post_comment %>
  </div>

    <!--編集・削除リンク　投稿者にのみ表示-->
   <% if @post_image.user == current_user %>
      <%= link_to "Edit", edit_post_image_path(@post_image.id) %>
      <%= link_to "Delete", post_image_path(@post_image), method: :delete, "data-confirm" => "本当に削除しますか？" %>
   <% end %>
</div>
</div>
