<div class="flame">
<h2 class="heading">New Post</h2>
<div class="show-card">
  <% if @post_image.errors.any? %>
   <p class="center">ERROR:写真が選択されていません</p>

  <% end %>
  <%= form_with model: @post_image do |f| %>
    <p class="center">Image</p>
      <p class="center"><%= f.file_field :image, accept: "image/*" %></p>
    <p class="center">Caption</p>
      <p class="center"><%= f.text_area :caption %></p>
    <p class="center"><%= f.submit 'Post', class: "submit" %></p>
  <% end %>
</div>
</div>

