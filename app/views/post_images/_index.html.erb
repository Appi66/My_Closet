<% post_images.each do |post_image| %>
<div class="index-card">
  <table>
    <td>
      <%= image_tag post_image.user.get_profile_image(50,50), class: "profile-image" %>
    </td>
    <td>
      <%= link_to user_path(post_image.user.id), class: "link" do %>
      <%= post_image.user.name %>
      <% end %>
    </td>
  </table>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image(300,250) %>
  <% end %>


  <!--いいね-->
  <% if post_image.favorited_by?(current_user) %>
    <p>
      <%= link_to post_image_favorites_path(post_image), method: :delete do %>
      💛<%= post_image.favorites.count %>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_image_favorites_path(post_image), method: :post do %>
      ♡<%= post_image.favorites.count %>
      <% end %>
    </p>
  <% end %>

  <p>コメント<%= post_image.post_comments.count %>件</p>
</div>
<% end %>
