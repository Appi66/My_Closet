<h2 class="heading">My Closet</h2>
<div class="user-page">
　<div class="sidebar">
  <div>
    <!--アイテム追加ボタン-->
    <%= link_to new_item_image_path, class: "submit link" do %>Add<% end %>
    <!--アイテム検索-->
      <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word, placeholder: "アイテム名" %><%= f.submit "Search" %>
      <% end %>

  　<!--ジャンル一覧-->
  <table>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td>
                <p class="category"><%= link_to category.name, item_images_path(category_id: category.id), class: "link" %></p>
            </td>
        </tr>
        <% end %>
      </tbody>
  </table>
  </div>
  </div>
  <!--ユーザーの投稿一覧-->
  <div class="user-post">
    <div class="card-wrap">
      <%= render 'index', item_images: @item_images %>
    </div>
  </div>
</div>