<h2 class="heading">My Page</h2>
<div class="user-page">
　<div class="sidebar">
  <div>
    <!--アイテム追加ボタン-->
    <%= link_to new_item_image_path, class: "submit link" do %>Add<% end %>
    <!--アイテム検索-->
      <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %><%= f.submit "Search" %>
      <% end %>

  　<!--ジャンル一覧-->
  <table>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td>
                <%= link_to category.name, item_images_path(category_id: category.id) %>
            </td>
        </tr>
        <% end %>
      </tbody>
  </table>
  </div>
  </div>
  <div class="user-post">
    <div class="card-wrap">
    <% @item_images.each do |item_image| %>
      <div class="index-card">
        <p class="center"><%= link_to item_image_path(item_image.id) do %>
        <%= image_tag item_image.get_image(300,250) %>
        <% end %></p>
        <table>
            <tr>
                <td>Category..</td>
                <td><%= item_image.category.name %></td>
            </tr>

            <tr>
                <td>Name.........</td>
                <td><%= item_image.name %></td>
            </tr>
            <tr>
                <td>Brand........</td>
                <td><%= item_image.brand_name %></td>
            </tr>
        </table>
      </div>
    <% end %>
    </div>
  </div>

</div>