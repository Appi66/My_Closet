    <% unless user == current_user %>
      <% if current_user.following?(user) %>
        <%= link_to user_relationships_path(user_id: user.id), class: "submit link", method: :delete, remote: true do %>unfollow<% end %>
      <% else %>
        <%= link_to user_relationships_path(user_id: user.id), class: "submit link", method: :post, remote:true do %>follow<% end %>
      <% end %>
    <% end %>